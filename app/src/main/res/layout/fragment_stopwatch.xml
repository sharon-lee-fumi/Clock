<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="stopwatch"
            type="pointclickcare.lish.clock.model.Stopwatch" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".ui.StopwatchFragment">

        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stopwatch_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/stopwatch_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/stopwatch_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="00"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/colorPrimaryText" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgBtn_run"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/oval" />

        <Button
            android:id="@+id/resetBtn"
            style="@style/StopwatchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="100dp"
            android:text="@string/stopwatch_reset" />
    </FrameLayout>
</layout>